{
	"name": "ffmpeg-audio-player",
	"version": "0.1.0-rc1",
	"type": "module",
	"packageManager": "bun@1.3.5",
	"engines": {
		"node": ">=20.0.0",
		"bun": ">=1.3.5"
	},
	"files": [
		"dist"
	],
	"main": "./dist/ffmpeg-audio-player.umd.cjs",
	"module": "./dist/ffmpeg-audio-player.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/ffmpeg-audio-player.js",
			"require": "./dist/ffmpeg-audio-player.umd.cjs"
		}
	},
	"scripts": {
		"dev": "vite",
		"build": "bun run build:demo && bun run build:wasm",
		"build:demo": "tsc -b && vite build",
		"build:wasm": "bun scripts/build.ts",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"sync:headers": "bun scripts/sync-headers.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "^1.3.5",
		"@types/emscripten": "^1.41.5",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react-swc": "^4.2.2",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-dts": "^4.5.4"
	}
}
